<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/textDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Login form"
        android:gravity="center"
        android:textSize="30dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDangNhap"
        android:hint="username" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:hint="password" />
    <Button
        android:id="@+id/dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dang nhap"
        android:layout_below="@id/password"
        android:layout_marginLeft="40dp"
        />
    <Button
        android:id="@+id/quenmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quen MK"
        android:layout_toRightOf="@id/dangnhap"
        android:layout_below="@id/password"
        />
    <Button
        android:id="@+id/trogiup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tro giup"
        android:layout_toRightOf="@id/quenmk"
        android:layout_below="@id/password"
        />
</RelativeLayout>